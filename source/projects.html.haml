!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= current_page.data.title || "Cody Roberts"
    = stylesheet_link_tag "application"
    = stylesheet_link_tag "//fonts.googleapis.com/css?family=Radley:400,400italic"
    = stylesheet_link_tag "//fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic,700italic"
    = stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css"
    = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"

  %body{class: "type-system-traditional"}
    .blog-wrapper
      %nav{id: "no-blog"}
        = partial "nav"
      .project-list
        %h2= "Chowmonger"
        %a{href: "https://chowmonger.pagefrontapp.com"}
          %i{class: "fa fa-globe fa-2x"}
        %a{href: "https://www.github.com/chowmonger"}
          %i{class: "fa fa-github fa-2x"}
        %p{class: "date"}= "Apr 2016 - current"
        %p{class: "built"}= "Phoenix, Ember, Bourbon"
        %p{class: "details"}= "Real-time food truck platform"
        %hr
        %h2= "Bloomyminded"
        %a{href: "http://www.bloomyminded.com"}
          %i{class: "fa fa-globe fa-2x"}
        %a{href: "http://www.github.com/codyjroberts/bloomyminded"}
          %i{class: "fa fa-github fa-2x"}
        %p{class: "date"}= "Nov 2015"
        %p{class: "built"}= "Rails 4, RSpec, Capybara, Paperclip"
        %p{class: "details"}= "Community database for artisan cheese (Rails Rumble 2015)"
        %hr
        %h2= "ShelterMatch"
        %a{href: "https://sheltermatch.herokuapp.com"}
          %i{class: "fa fa-globe fa-2x"}
        %a{href: "https://github.com/sheltermatch/sheltermatch-hackathon-entry"}
          %i{class: "fa fa-github fa-2x"}
        %p{class: "date"}= "Sept 2015"
        %p{class: "built"}= "Rails 4, Devise"
        %p{class: "details"}= "Homeless shelter info display (Huskie Hack 2015)"
        %hr
        %h2= "Classroom QnA"
        %a{href: "https://classroom-qna.herokuapp.com"}
          %i{class: "fa fa-globe fa-2x"}
        %a{href: "https://github.com/codyjroberts/classroom-qna"}
          %i{class: "fa fa-github fa-2x"}
        %p{class: "date"}= "Sept 2015"
        %p{class: "built"}= "Rails 4, Devise, Pundit, Rollify"
        %p{class: "details"}= "Piazza-like forum.  First Rails app!"
        %hr
        %h2= "Chicrime"
        %a{href: "https://rubygems.org/gems/chicrime"}
          %i{class: "fa fa-globe fa-2x"}
        %a{href: "https://github.com/codyjroberts/chicrime"}
          %i{class: "fa fa-github fa-2x"}
        %p{class: "date"}= "Aug 2015"
        %p{class: "built"}= "Ruby, RSpec, soda-ruby"
        %p{class: "details"}= "Ruby gem for Chicago crime data"
        %hr
        %h2= "Locallective"
        %a{href: "http://www.locallective.com"}
          %i{class: "fa fa-globe fa-2x"}
        %p{class: "date"}= "Jan 2015"
        %p{class: "built"}= "Wordpress (LEMP)"
        %p{class: "details"}= "Chicago art collective"
    = javascript_include_tag "https://code.jquery.com/jquery-2.1.1.min.js"
    = javascript_include_tag "application"
